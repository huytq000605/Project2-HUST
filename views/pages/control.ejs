<script>
	function vertical_range_handle() {
		vertical_range = document.querySelector("#vertical_range")
		vertical_range_value = document.querySelector("#vertical_range_value")
		vertical_range_value.innerHTML = vertical_range.value
	}

	function horizontal_range_handle() {
		horizontal_range = document.querySelector("#horizontal_range")
		horizontal_range_value = document.querySelector("#horizontal_range_value")
		horizontal_range_value.innerHTML = horizontal_range.value
	}
    const api= '<%= process.env.API %>';
	function up() {
		fetch(`${api}/up`, {method: "POST"})
	}
	function down() {
		fetch(`${api}/down`, {method: "POST"})
	}
	function left() {
		fetch(`${api}/left`, {method: "POST"})
	}
	function right() {
		fetch(`${api}/right`, {method: "POST"})
	}
	function stop() {
		fetch(`${api}/stop`, {method: "POST"})
	}
    function out() {
        fetch(`${api}/out`, {method: "POST"})
    }
	function sendAngle() {
		const vertical = document.querySelector("#vertical_range").value
		const horizontal = document.querySelector("#horizontal_range").value
		fetch(`${api}/angle`, {method: "POST", body: JSON.stringify({vertical, horizontal})})
	}
</script>