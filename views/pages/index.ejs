<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('head') %>
</head>

<body>
  <%- include('header') %>
    <div class="container">
      <div class="row">
        <div class="container" style="height:400px">
          <canvas id="light"></canvas>
        </div>
      </div>

      <div class="container row-buffer row d-flex">
        <div class="col">
          <div class="row">
            <div class="direction"></div>
            <button class="btn mx-3 direction btn-secondary">UP</button>
            <div class="direction"></div>
          </div>
          <div class="row row-buffer">
            <button class="btn direction btn-secondary">LEFT</button>
            <button class="btn mx-3 direction btn-danger rounded-circle">STOP</button>
            <button class="btn direction btn-secondary">RIGHT</button>
          </div>
          <div class="row row-buffer">
            <div class="direction"></div>
            <button class="btn mx-3 direction btn-secondary">DOWN</button>
            <div class="direction"></div>
          </div>
        </div>
        <div class="col">
          <div class="d-flex" style="height: 140px">
            <div class="col-10">
              <div class="row">
                <div style="width: 100px">
                  <label for="vertical_range" class="form-label">Vertical</label>
                </div>
                <div class="d-flex">
                  <input type="range" class="form-range" id="vertical_range" min="0" max="180" step="1"
                    onchange="vertical_range_handle()" style="width: 300px">
                  <output id="vertical_range_value">50</output>
                </div>
              </div>
              <div class="row">
                <div style="width: 100px">
                  <label for="horizontal_range" class="form-label">Horizontal</label>
                </div>
                <div class="d-flex">
                  <input type="range" class="form-range slider" id="horizontal_range" min="0" max="180" step="1"
                    onchange="horizontal_range_handle()" style="width: 300px">
                  <output id="horizontal_range_value">50</output>
                </div>
              </div>

            </div>
            <button style="height:50px; margin-top:45px" class="col-2 btn btn-primary">Send</button>
          </div>
          <div class="font-weight-normal">
            Current mode:
          </div>
          <div class="font-weight-normal row-buffer">
            Current light intensity:
          </div>
          </div>
      </div>

    </div>
</body>
<%- include('boostrap_script') %>
  <%- include('control') %>
    <%- include('chart') %>
      <%- include('polling') %>

</html>